<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.hourcalculator.AddHoursActivity">

    <Button
        android:id="@+id/setStartHourBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Imposta ora di inizio"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/setEndHourBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.823" />

    <Button
        android:id="@+id/setEndHourBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Imposta ora di fine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.905" />

    <Button
        android:id="@+id/saveHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="377dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Imposta ora di fine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/startTimeTxt"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/setStartHourBtn"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/endTimeTxt"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/setStartHourBtn"
        android:layout_marginTop="27dp"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTxt" />

    <EditText
        android:id="@+id/finalTimeTxt"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="time"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="234dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
